<Window x:Class="RandoWorkout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandoWorkout"
        mc:Ignorable="d"
        Title="Randomizer Exerciser" Height="230" Width="550" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Column="0" Grid.Row="0" Margin="3" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Unneeded Item" Grid.Row="0" Grid.Column="0" Height="30" Width="100" Click="AddUI_Click"/>
            <Label Content="{Binding Path=UnneededItemsCount}" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0" Margin="3" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Rupee" Grid.Row="0" Grid.Column="0" Height="30" Width="100" Click="AddR_Click"/>
            <Label Content="{Binding Path=RupeeCount}" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="0" Margin="3" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Heart Piece" Grid.Row="0" Grid.Column="0" Height="30" Width="100" Click="AddHP_Click"/>
            <Label Content="{Binding Path=HeartPiecesCount}" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="3" Grid.Row="0" Margin="3" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Sea Chart" Grid.Row="0" Grid.Column="0" Height="30" Width="100" Click="AddSC_Click"/>
            <Label Content="{Binding Path=SeaChartsCount}" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
        
        <Grid Grid.Row="1" Grid.ColumnSpan="99">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding Path=SquatsLabel}" Grid.Column="0" HorizontalContentAlignment="Center"/>
            <Label Content="{Binding Path=CurlsLabel}" Grid.Column="1" HorizontalContentAlignment="Center"/>
            <Label Content="{Binding Path=ShrugsLabel}" Grid.Column="2" HorizontalContentAlignment="Center"/>
            <Label Content="{Binding Path=OverheadPressLabel}" Grid.Column="3" HorizontalContentAlignment="Center"/>
        </Grid>
        
        <GroupBox Header="Output" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Center" Margin="3">
            <TextBox Name="ConsoleOutBox" Height="80" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Text="{Binding Path=ConsoleOutput}"/>
        </GroupBox>
        <Grid Grid.Row="2" Grid.Column="3" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Clear" Click="Clear_Click" Width="100" Height="30" Margin="3"/>
            <Button Grid.Row="1" Content="Reset" Click="Reset_Click" Width="100" Height="30" Margin="3"/>
        </Grid>
    </Grid>
</Window>